<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88AB8E"
    tools:context=".HomeActivity"
    tools:ignore="HardcodedText,SpUsage,VisualLintButtonSize,ContentDescription">

    <TextView
        android:id="@+id/tvStudyMate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STUDYMATE"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="22.5dp"
        app:layout_constraintTop_toTopOf="@+id/tvStudyMate"
        app:layout_constraintBottom_toBottomOf="@+id/tvStudyMate"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTodayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Focus"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvStudyMate"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTodayFocus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTodayLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#DFF0D8">

            <ImageView
                android:id="@+id/ivCheckIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/checkbox_on_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTaskTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Revision Biology Chapter 3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@+id/ivCheckIcon"
                app:layout_constraintStart_toEndOf="@+id/ivCheckIcon"
                app:layout_constraintEnd_toStartOf="@+id/tvPercentage" />

            <TextView
                android:id="@+id/tvReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder : 8:00 PM"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tvTaskTitle"
                app:layout_constraintStart_toStartOf="@+id/tvTaskTitle" />

            <TextView
                android:id="@+id/tvPercentage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:drawable/progress_horizontal"
                android:gravity="center"
                android:text="20%"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMarkDone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Mark as Done"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvReminder"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSubjectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/cvTodayFocus"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/llSubjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubjectLabel">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@android:drawable/ic_menu_edit" />
            </androidx.cardview.widget.CardView>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MATH" android:textSize="10sp" android:textStyle="bold" android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="12dp">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@android:drawable/ic_menu_view" />
            </androidx.cardview.widget.CardView>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SCIENCE" android:textSize="10sp" android:textStyle="bold" android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvQuickLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Action"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/llSubjects"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:text="+ Add New Task"
        android:backgroundTint="#FFFFFF"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@+id/tvQuickLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>